{
  "name": "copyback",
  "version": "1.0.0-rc",
  "author": "Matthew Volk",
  "license": "ISC",
  "packageManager": "pnpm@10.12.1",
  "main": "dist/main.js",
  "scripts": {
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "clean": "rimraf dist",
    "copy-assets": "cpx \"assets/**/*\" dist/assets",
    "build": "pnpm run clean && tsc && pnpm run copy-assets",
    "dev": "concurrently -k -n typescript-build,copy-assets,electronmon -c blue,green,magenta \"tsc -w\" \"cpx -w \\\"assets/**/*\\\" dist/assets\" \"electronmon .\"",
    "dist:mac": "pnpm run build && electron-builder --mac",
    "dist:win": "pnpm run build && electron-builder --win"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@types/electron": "^1.6.12",
    "@types/node": "^24.0.3",
    "concurrently": "^9.1.2",
    "cpx": "^1.5.0",
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "build": {
    "appId": "com.matthewvolk.copyback",
    "productName": "Copyback",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "publish": null
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "keywords": [
    "clipboard",
    "history",
    "electron"
  ]
}
